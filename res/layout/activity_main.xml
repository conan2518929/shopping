<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    >
	<LinearLayout 
	    android:id="@+id/ll"
	    android:layout_alignParentBottom="true"
	    android:layout_width="match_parent"
	    android:layout_height="55dp"
	    android:orientation="horizontal"
	    android:gravity="center"
	    android:paddingLeft="10dp"
	    android:paddingRight="10dp"
	    >
	    <LinearLayout 
	        android:id="@+id/ll_one"
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="wrap_content"       
	        android:orientation="vertical"
	        android:gravity="center"
	        >
	        <ImageView
	            android:id="@+id/img_one" 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:src="@drawable/home_sy_blue"
	            />
	        <TextView 
	            android:id="@+id/tv_one" 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="首页"
	            android:textColor="@color/blue"
	            />
	    </LinearLayout>
	    <LinearLayout 
	        android:id="@+id/ll_two"
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="wrap_content"       
	        android:orientation="vertical"
	        android:gravity="center"
	        >
	        <ImageView 
	            android:id="@+id/img_two" 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:src="@drawable/home_search_gray"
	            />
	        <TextView 
	            android:id="@+id/tv_two" 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="查找"
	            android:textColor="@color/gray"
	            />
	    </LinearLayout>
	       <LinearLayout 
	        android:id="@+id/ll_five"
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="wrap_content"       
	        android:orientation="vertical"
	        android:gravity="center"
	        >
	        <ImageView 
	            android:id="@+id/img_five" 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:src="@drawable/pic_hd_hui"
	            />
	        <TextView 
	            android:id="@+id/tv_five" 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="互动"
	            android:textColor="@color/gray"
	            />
	    </LinearLayout>
	    <LinearLayout 
	        android:id="@+id/ll_three"
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="wrap_content"       
	        android:orientation="vertical"
	        android:gravity="center"
	        >
	        <ImageView 
	            android:id="@+id/img_three" 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:src="@drawable/home_txl_gray"
	            />
	        <TextView 
	            android:id="@+id/tv_three" 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="通讯录"
	            android:textColor="@color/gray"
	            />
	    </LinearLayout>
	    <LinearLayout 
	        android:id="@+id/ll_four"
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="wrap_content"       
	        android:orientation="vertical"
	        android:gravity="center"
	        >
	        <ImageView 
	            android:id="@+id/img_four" 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:src="@drawable/home_my_gray"
	            />
	        <TextView 
	            android:id="@+id/tv_four" 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="我的"
	            android:textColor="@color/gray"
	            />
	    </LinearLayout>
	    
	</LinearLayout>
	
	<View 
	    android:id="@+id/line"
	    android:layout_above="@id/ll"
	    android:layout_width="match_parent"
	    android:layout_height="0.5dp"
	    android:background="@color/line"
	    />
	<RelativeLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/line" />
</RelativeLayout>
