<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/img_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:src="@drawable/home_item_top" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/img"
                android:layout_width="62dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/home_item_pic" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7.5"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7" >

                    <TextView
                        android:id="@+id/item_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="5dp"
                        android:drawableRight="@drawable/home_lb_jt"
                        android:text="汽车用品商城"
                        android:textColor="@color/black"
                        android:textSize="@dimen/ziti_size_six" />

                    <TextView
                        android:id="@+id/item_zy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/item_title"
                        android:layout_marginTop="10dp"
                        android:drawableLeft="@drawable/home_lb_zy"
                        android:drawablePadding="3dp"
                        android:text="主营 :"
                        android:textColor="@color/home_list_item_text"
                        android:textSize="@dimen/ziti_size_four" />

                    <ImageView
                        android:id="@+id/img_one"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_below="@id/item_title"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@id/item_zy"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:visibility="gone"
                        />

                    <ImageView
                        android:id="@+id/img_two"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_below="@id/item_title"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@id/img_one"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:visibility="gone"
                        />
                    <ImageView
                        android:id="@+id/img_three"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_below="@id/item_title"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@id/img_two"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:visibility="gone"
                        />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_talk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="3dp"
                        android:drawableTop="@drawable/home_lb_xx"
                        android:text="消息"
                        android:textColor="@color/home_list_item_blue"
                        android:textSize="@dimen/ziti_size_four" />

                    <TextView
                        android:id="@+id/tv_tel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:drawablePadding="3dp"
                        android:drawableTop="@drawable/home_lb_dh"
                        android:text="电话"
                        android:textColor="@color/home_list_item_blue"
                        android:textSize="@dimen/ziti_size_four" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/home_lb_dt"
                    android:drawablePadding="3dp"
                    android:text="地址 :"
                    android:textColor="@color/home_list_item_text"
                    android:textSize="@dimen/ziti_size_four" />

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="10dp"
                    android:singleLine="true"
                    android:text="北京市朝阳区xxx..."
                    android:textColor="@color/home_list_item_blue"
                    android:textSize="@dimen/ziti_size_four" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <!-- 时间 和 金额 -->

    <LinearLayout
        android:id="@+id/ll"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingRight="10dp" >

        <TextView
            android:id="@+id/tv_hj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="合计:"
            android:textColor="@color/black_five"
            android:textSize="@dimen/ziti_size_four" />

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="800.00"
            android:textColor="@color/black_five"
            android:textSize="@dimen/ziti_size_four" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="2016-05-10 08:10:23"
            android:textColor="@color/black_five"
            android:textSize="@dimen/ziti_size_four" />
    </LinearLayout>
    <!-- 按钮 -->

    <RelativeLayout
        android:id="@+id/rl_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:visibility="gone" >

        <TextView
            android:id="@+id/qrfk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/my_qxdd"
            android:gravity="center"
            android:text="确认付款"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/scdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/qrfk"
            android:background="@drawable/my_scdd"
            android:gravity="center"
            android:text="取消订单" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingTop="5dp" >

        <TextView
            android:id="@+id/qqsh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/my_qxdd"
            android:gravity="center"
            android:text="确认收货"
            android:visibility="gone"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/qxdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/qqsh"
            android:background="@drawable/my_scdd"
            android:gravity="center"
            android:visibility="gone"
            android:text="取消订单"
            android:textColor="@color/home_list_item_text" />
        <TextView
            android:id="@+id/tv_wait"
            android:visibility="gone"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/qqsh"
            android:background="@drawable/my_scdd"
            android:gravity="center"
            android:text="等待商家确认中..."
            android:textColor="@color/home_list_item_text" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:visibility="gone" >

        <TextView
            android:id="@+id/yqx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/my_yqx"
            android:gravity="center"
            android:text="已取消"
            android:textColor="@color/white" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_four"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:visibility="gone" >

        <TextView
            android:id="@+id/ywc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/my_yqx"
            android:gravity="center"
            android:text="已完成"
            android:textColor="@color/white" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/img_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:src="@drawable/home_item_bottom" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line" />

</LinearLayout>